{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@glodon-aiot/chat-app-sdk": ["../chat-app-sdk/src/index.ts"],
      "@glodon-aiot/chat-app-sdk/*": ["../chat-app-sdk/src/*"],
      "@coze-studio/open-chat/types": ["../../open-chat/src/exports/types.ts"],
      "@coze-studio/open-chat/envs": ["../../open-chat/src/util/env.ts"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["src", "src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
